<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1Presion191G0243.Views.AgregarRegistroView"
               xmlns:vm="clr-namespace:Proyecto1Presion191G0243.ViewModels">
    <ContentPage.BindingContext>
        <vm:PresionViewModel></vm:PresionViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>

        <StackLayout>
            <Label >Nombre</Label>
            <Entry Text="{Binding Presion.Nombre}"></Entry>
            <Label>PresionSistolica</Label>
            <Entry Text="{Binding Presion.PresionSistolica}"></Entry>
            <Label>PresionDiastolica</Label>
            <Entry Text="{Binding Presion.PresionDiastolica}"> </Entry>
            <Label>Pulso</Label>
            <Entry Text="{Binding Presion.Pulso}"></Entry>
            <TimePicker  Time="{Binding Presion.Hora}"></TimePicker>
            <DatePicker Date="{Binding Presion.Fecha}"></DatePicker>

            <Button Text="Aceptar" Command="{Binding AgregarCommand}"></Button>
            <Button Text="Regresar"  Command="{Binding CancelarCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>